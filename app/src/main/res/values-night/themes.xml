<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.NusaTinggi.Night" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_secondary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@color/background</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/yellow_accent</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Background and surface colors -->

        <item name="colorSurface">@color/green_primary</item>
        <item name="colorOnSurface">@color/background</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/green_secondary</item>
    </style>
</resources>